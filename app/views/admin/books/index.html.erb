<h1>welcome to Books</h1>
<button class="btn btn-primary btn-lg fa fa-plus-circle fa-2x" ><%= link_to "Add new Books",new_admin_book_path(sub_id: @sub_category), style: "color: white;text-decoration:none;"  %></button><br><br> 
<!-- 
<button class="btn btn-info btn-lg"><%= link_to "back to Home",admin_dashboards_path, style: "color: white;text-decoration:none;"  %></button><br><br>  -->

<table class="table table-hover">
	<thead>
		<tr><th> Title</th>
			<th>Action</th>
			<th>Status</th>
		</tr>
	</thead>
<tbody>
	<% @books.each do |book|%>
	<tr>
	<td><%= book.book_title%></td>
	<td><%= link_to "", edit_admin_book_path(book,sub_id: @sub_category),:class => 'btn btn-success fa fa-pencil-square-o'%>
		<%= link_to "" ,admin_book_path(book), method: :delete ,data: {confirm: "are you sure to delete data"} ,:class => 'btn btn-danger fa fa-trash-o fa-lg'%>
	</td>	
	<td><%= book.status%></td>
	</tr>

<%end%>
</tbody>

</table>


<%= will_paginate @books,renderer: BootstrapPagination::Rails %>


