<h1>welcome to catagerie</h1>
<button class="btn btn-primary btn-lg fa fa-plus-circle fa-2x" ><%= link_to "Add new catagerie",new_admin_category_path, style: "color: white;text-decoration:none;"  %></button><br><br> 

<table class="table table-hover">
	<thead>
		<tr><th> Title</th>
			<th>Action</th>
			<th>Subcategory</th>
		</tr>
	</thead>
<tbody>
	<% @category.each do |catagerie|%>
	<tr>
	<td><%= catagerie.title%></td>
	<td><%= link_to "", edit_admin_category_path(catagerie),:class => 'btn btn-info fa fa-pencil-square-o'%>
		<%= link_to "" ,admin_category_path(catagerie), method: :delete ,data: {confirm: "are you sure to delete data"} ,:class => 'btn btn-danger fa fa-trash-o fa-lg' %>
	</td>	
	<td> <%= link_to "Add Subcategory of #{catagerie.title}",  admin_sub_categories_path(category: catagerie),:class => 'btn btn-warning' %></td>
	</tr>

<%end%>
</tbody>

</table>

<%= will_paginate @category ,renderer: BootstrapPagination::Rails %>
